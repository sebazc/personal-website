<style>
  main {
    padding: 1.5rem;
    max-width: 100ch;
  }
  .posts-list li {
    border-radius: 5px;
    margin: 5px;
    color: #ff7a18;
    /* background-color: #f2f2f2; */
  }
  .posts-list a {
    display: block;
    padding-left: 0.5rem;
  }
  .posts-list a:link {
    text-decoration: none;
    color: black;
  }

  .posts-list a:visited {
    text-decoration: none;
    color: #993333;
  }

  .posts-list a:hover {
    text-decoration: none;
    background-color: #f2f2f2;
  }

  .posts-list a:active {
    text-decoration: none;
    background-color: #f2f2f24f;
    /* background-color: #9999ff; */
    /* color: yellow; */
  }
  .span-li {
    float: right;
    padding-right: 0.5rem;
    visibility: hidden;
  }

  .image-container {
    display: flex;
    justify-content: center;
    margin-top: 100px;
  }

  .square {
    width: 150px;
    height: 150px;
    margin: 0 20px;
    border-radius: 5px;
    transition: all 0.2s ease-in-out;
  }

  .square:hover {
    transform: scale(1.1);
  }

  .tweet-container {
    max-width: 600px;
    margin: 0 auto;
    margin-top: 100px;
  }

  .twitter-tweet {
    display: inline-block;
    border: none;
    margin: 0;
    padding: 0;
  }

  .twitter-tweet-rendered {
    font-size: 14px;
    line-height: 1.5;
    color: #333;
  }
</style>
